# AI Provider Configuration
# Option 1: OpenAI (default)
OPENAI_API_KEY=your_openai_api_key_here

# Option 2: Google Gemini (recommended)
GOOGLE_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# Option 3: Other providers
# ANTHROPIC_API_KEY=your_anthropic_key_here
# COHERE_API_KEY=your_cohere_key_here

# Search & News APIs
SERPER_API_KEY=your_serper_api_key_here
NEWS_API_KEY=your_news_api_key_here

# Financial Data APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
FINANCIAL_MODELING_PREP_API_KEY=your_fmp_key_here

# Database Configuration
DATABASE_URL=sqlite:///stock_adviser.db

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3
API_BACKOFF_FACTOR=2

# Data Sources
DATA_PROVIDER_PRIMARY=yfinance
DATA_PROVIDER_FALLBACK=alpha_vantage
CACHE_ENABLED=true
CACHE_TTL=300

# Analysis Settings
SENTIMENT_THRESHOLD=0.6
RISK_CALCULATION_METHOD=var
CONFIDENCE_INTERVAL=0.95

# CrewAI Settings
CREWAI_VERBOSE=true
CREWAI_MEMORY=true
CREWAI_MAX_ITER=5

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
SESSION_TIMEOUT=3600
ENABLE_RATE_LIMITING=true